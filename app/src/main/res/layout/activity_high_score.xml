<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F3CD"
    tools:context=".activities.HighScoreActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/score_LBL_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:textColor="#4A3903"
            android:text="Score Board"
            android:textSize="32dp" />

        <FrameLayout
            android:id="@+id/score_FRM_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:layout_margin="16dp"
            android:background="#F79EECF6"/>

        <FrameLayout
            android:id="@+id/score_FRM_map"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:layout_margin="16dp"
            android:background="#FFEB3B"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/score_BTN_playAgain"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:backgroundTint="#FFC107"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:cornerRadius="10dp"
            android:layout_margin="16dp"
            android:text="Play Again" />
    </LinearLayout>
</RelativeLayout>